<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="474.0" prefWidth="668.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aut.ap.graphical.ItemController">

    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="668.0" spacing="10.0">
             <Label fx:id="senderLabel" maxWidth="1.7976931348623157E308" prefHeight="21.0" prefWidth="212.0">
            <font>
               <Font size="15.0" />
            </font>
         </Label>
             <Label fx:id="subjectLabel" maxHeight="-Infinity" prefHeight="21.0" prefWidth="185.0">
            <font>
               <Font size="15.0" />
            </font>
         </Label>
             <Label fx:id="codeLabel" prefHeight="21.0" prefWidth="90.0">
            <font>
               <Font size="15.0" />
            </font>
         </Label>

            <Button fx:id="replyButton" onAction="#handleReply" prefHeight="0.0" prefWidth="46.0" text="Reply" />
            <Button fx:id="forwardButton" onAction="#handleForward" prefHeight="25.0" prefWidth="60.0" text="Forward" />
        </HBox>
    </children>
</AnchorPane>
